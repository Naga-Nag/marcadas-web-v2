{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Marcadas",
  "version": "0.1.0",
  "identifier": "com.marcadas.app",
  "build": {
    "frontendDist": ["./static/index.html"]
  },
  "app": {
    "withGlobalTauri": false,
    "windows": [
      {
        "title": "Marcadas",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "resources": [
      ".env"
    ],
    "windows": {
          "webviewInstallMode": {
            "type": "offlineInstaller"
          }
        },
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
